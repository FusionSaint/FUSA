---
const { class: className } = Astro.props;
import { Image } from "astro:assets";
import { Button } from "@/components/ui/button";
import FsLogo from "@/assets/fs-logo.svg";
---

<div
  class:list={[
    "pattern py-6 w-full md:w-3/4 md:max-w-8xl min-h-dynamic_hero flex items-center justify-center",
    className,
  ]}
>
  <!-- Responsive two-column hero -->
  <div class="flex flex-col md:flex-row items-center justify-center gap-10 w-full">
    <!-- LEFT: text -->
    <div class="w-full md:w-1/2 flex flex-col gap-4 p-8 justify-center items-center md:items-start">
      <h1 class="text-pretty text-center md:text-center text-4xl md:text-5xl lg:text-6xl tracking-wide text-fs-blue">
        Elevate Your Game with a Little <span class="text-fs-gold italic">Saintly</span> Guidance...
      </h1>

      <div class="py-4 self-center">
        <a
          href="/getting-started"
          class="inline-flex items-center justify-center whitespace-nowrap rounded-lg text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-1 focus-visible:ring-ring shadow h-10 px-8 bg-fs-gold text-black hover:bg-fs-gold/90"
        >
          Begin Your Enlightenment
        </a>
      </div>
    </div>

    <!-- RIGHT: logo (bigger) -->
    <div class="w-full md:w-1/2 flex justify-center items-center p-8">
      <Image
        src={FsLogo}
        alt="FusionSaint logo"
        class="w-[360px] md:w-[560px] lg:w-[640px] drop-shadow-[0_0_60px_#19B1FF]"
      />
    </div>
  </div>
</div>

<style>
@media (max-width: 380px) {
  h1 { line-height: 1.1; }
}
</style>
