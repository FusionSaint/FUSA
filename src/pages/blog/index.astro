---
// src/pages/blog/index.astro
import { getCollection } from 'astro:content';
import BlogLayout from '@/layouts/BlogLayout.astro';

// Fetch all blog posts
const allPosts = await getCollection('blog');

// Sort posts by publication date, newest first
// This ensures your most recent posts appear at the top
const sortedPosts = allPosts.sort((a, b) => 
  b.data.pubDate.getTime() - a.data.pubDate.getTime()
);
---

<BlogLayout 
  title="FusionSaint Blog" 
  description="Latest updates, patch notes, and tactical insights for competitive gaming"
>
  <div class="max-w-6xl mx-auto px-4 py-12">
    <!-- Page header -->
    <div class="mb-12">
      <h1 class="text-4xl font-bold text-foreground mb-4">FusionSaint Blog</h1>
      <p class="text-lg text-foreground/70">
        Quick takes, patch updates, and tactical insights from the battlefield
      </p>
    </div>

    <!-- List of blog posts as cards -->
    <div class="space-y-6">
      {sortedPosts.map(post => {
        // Format the date for each post
        const formattedDate = post.data.pubDate.toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric'
        });

        return (
          <article class="p-6 rounded-lg border-2 border-border bg-card/30 hover:border-primary/50 transition-colors">
            <a href={`/blog/${post.slug}`} class="block">
              <!-- Post title and game tag -->
              <div class="flex items-start justify-between gap-4 mb-3">
                <h2 class="text-2xl font-semibold text-foreground hover:text-primary transition-colors">
                  {post.data.title}
                </h2>
                
                {/* Show game badge if specified */}
                {post.data.game && (
                  <span class="px-3 py-1 text-xs rounded-full bg-primary/20 text-primary whitespace-nowrap">
                    {post.data.game}
                  </span>
                )}
              </div>

              <!-- Post description -->
              <p class="text-foreground/70 mb-4">{post.data.description}</p>

              <!-- Post metadata (date and tags) -->
              <div class="flex items-center gap-4 text-sm text-foreground/60">
                <time datetime={post.data.pubDate.toISOString()}>
                  {formattedDate}
                </time>
                
                {/* Show tags if present */}
                {post.data.tags && post.data.tags.length > 0 && (
                  <>
                    <span>â€¢</span>
                    <div class="flex gap-2">
                      {post.data.tags.map(tag => (
                        <a 
                          href={`/blog/tags/${tag}`}
                          class="text-fs-gold hover:text-fs-gold/80 transition-colors hover:underline"
                        >
                          {tag}
                        </a>
                      ))}
                    </div>
                  </>
                )}
              </div>
            </a>
          </article>
        );
      })}
    </div>
  </div>
</BlogLayout>