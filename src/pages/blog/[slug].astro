---
// src/pages/blog/[slug].astro
import { getCollection } from 'astro:content';
import BlogLayout from '@/layouts/BlogLayout.astro';

// This function runs at build time to generate a page for each blog post
export async function getStaticPaths() {
  // Fetch all blog posts from the blog collection
  const blogPosts = await getCollection('blog');
  
  // Create a route for each post using its slug (filename without extension)
  return blogPosts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

// Get the post data that was passed in from getStaticPaths
const { post } = Astro.props;

// Render the MDX content of the post
const { Content } = await post.render();

// Format the publication date in a readable format
const formattedDate = post.data.pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BlogLayout title={post.data.title} description={post.data.description}>
  <div class="max-w-4xl mx-auto px-4 py-12">
    <!-- Blog post header with title, date, author, and metadata -->
    <div class="mb-12 pb-8 border-b-2 border-primary/30">
      <h1 class="text-4xl font-bold text-foreground mb-4">{post.data.title}</h1>
      
      <!-- Metadata line with date, author, and optional game tag -->
      <div class="flex items-center gap-4 text-sm text-foreground/60">
        <time datetime={post.data.pubDate.toISOString()}>
          {formattedDate}
        </time>
        <span>•</span>
        <span>{post.data.author}</span>
        
        <!-- Only show game tag if one was specified in frontmatter -->
        {post.data.game && (
          <>
            <span>•</span>
            <span class="text-primary font-semibold">{post.data.game}</span>
          </>
        )}
      </div>

      <!-- Optional tags display -->
      {post.data.tags && post.data.tags.length > 0 && (
  <div class="flex gap-2 mt-4">
    {post.data.tags.map(tag => (
      <a 
        href={`/blog/tags/${tag}`}
        class="px-3 py-1 text-xs rounded-full bg-primary/20 text-primary hover:bg-primary/30 transition-colors"
      >
        {tag}
      </a>
    ))}
  </div>
)}
    </div>

    <!-- The actual blog post content rendered from MDX -->
    <article class="prose prose-invert max-w-none">
      <Content />
    </article>

    <!-- Navigation back to blog index -->
    <div class="mt-16 pt-8 border-t-2 border-primary/30">
      <a 
        href="/blog" 
        class="inline-flex items-center gap-2 text-primary hover:text-primary/80 transition-colors"
      >
        ← Back to Blog
      </a>
    </div>
  </div>
</BlogLayout>